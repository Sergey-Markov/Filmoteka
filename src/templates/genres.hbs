<div id="genres-wrapper">
    <ul class="genre-button-list">
        <li class="genre-button-item">
            <input class="genre-button-input" id="genre-all" type="radio" name="radio" value="1" checked>
            <label class="genre-button-label" for="genre-all">All</label>
        </li>
        {{#each this}}
        <li class="genre-button-item">
            <input class="genre-button-input" id="{{name}}" type="radio" name="radio" value="{{id}}">
            <label class="genre-button-label" for="{{name}}" data-id="{{id}}">{{name}}</label>
        </li>
        {{/each}}
        <li class="genre-button-item">
            <input class="genre-button-input" id="clear-genres" type="radio" name="radio" value="clear">
            <label class="genre-button-label" for="clear-genres">Clear</label>
        </li>
    </ul>
</div>